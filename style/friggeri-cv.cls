\RequirePackage{fontawesome}

\def\homeIcon{{\FA \faHome}}
\def\emailIcon{{\FA \faEnvelope}}
\def\linkedinIcon{{\FA \faLinkedin}}
\def\twitterIcon{{\FA \faTwitter}}
\def\githubIcon{{\FA \faGithub}}
\def\globeIcon{{\FA \faGlobe}}
\def\phoneIcon{{\FA \faPhone}}
\def\mobileIcon{{\FA \faMobile}}
\def\faxIcon{{\FA \faFax}}

% makes a generic hyperlink
% usage: \link[optional text]{link}
\newcommand*{\link}[2][]{%
  \ifthenelse{\equal{#1}{}}%
    {\href{#2}{#2}}%
    {\href{#2}{#1}}}

% makes a http hyperlink
% usage: \httplink[optional text]{link}
\newcommand*{\httplink}[2][]{%
  \ifthenelse{\equal{#1}{}}%
    {\href{http://#2}{#2}}%
    {\href{http://#2}{#1}}}

% makes an email hyperlink
% usage: \emaillink[optional text]{link}
\newcommand*{\emaillink}[2][]{%
  \ifthenelse{\equal{#1}{}}%
    {\href{mailto:#2}{#2}}%
    {\href{mailto:#2}{#1}}}

% defines one's name, the middle name is optional
\newcommand{\name}[3]{%
  \ifthenelse{\equal{#2}{}}%
    {\text{#1} \text{#3}}%
    {\text{#1} \text{#2} \text{#3}}}

% defines one's address (optional)
% usage: \address{<street>}{<city>}{<country>}
\newcommand{\address}[3]{\text{#1}\\\text{#2}\\\text{#3}}

% define mobile
\newcommand{\mobile}[1]{\mobileIcon{} \text{#1}}

% define phone
\newcommand{\phone}[1]{\phoneIcon{} \text{#1}}

% define fax
\newcommand{\fax}[1]{\faxIcon{} \text{#1}}

% uses the email hyperlink and adds the email icon
\newcommand*{\email}[2][]{%
  \ifthenelse{\equal{#1}{}}%
    {\emailIcon{} \href{mailto:#2}{#2}}%
    {\emailIcon{} \href{mailto:#2}{#1}}}

% uses the link hyperlink and adds the twitter icon
\newcommand{\twitter[2]}{\twitterIcon{} \protect\httplink[#2]{www.twitter.com/#2}}

% uses the link hyperlink and adds the linkedin icon
\newcommand{\linkedin[2]}{\linkedinIcon{} \protect\httplink[#2]{www.linkedin.com/in/#2}}

% uses the link hyperlink and adds the github icon
\newcommand{\github[2]}{\githubIcon{}{} \protect\httplink[#2]{www.github.com/#2}}

% uses the link hyperlink and adds the github icon
\newcommand{\homepage[2]}{\globeIcon{}{} \protect\httplink[#2]{#2}}

